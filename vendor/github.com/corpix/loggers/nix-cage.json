{
    "mounts": {
        "rw": ["."],
        "ro": [
            "~/.emacs.d",
            "~/.spacemacs",
            "~/.gitconfig"
        ],
        "tmpfs": ["~", "~/.emacs.d/.cache"]
    },
    "environment": {
        "PATH":     "$HOME/.local/bin:$HOME/projects/bin:$PATH",
        "NIX_PATH": "$NIX_PATH",
        "GOPATH":   "$HOME/projects",
        "TERM":     "xterm-256color"
    }
}
